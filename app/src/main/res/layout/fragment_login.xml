<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="youp.ingesup.com.youp.view.fragment.LoginFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop="50dp"
        android:layout_gravity="center"
        android:weightSum="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:id="@+id/etUsername" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Password"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:id="@+id/etPassword"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/rounded_clickable_blue"
            android:layout_height="35dp"
            android:text="Login"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:id="@+id/bt_Login" />

        <ImageView
            android:background="@color/Black"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:id="@+id/imageView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Lost Password"
            android:background="@drawable/rounded_clickable_white"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp"
            android:id="@+id/btLostPassword" />
    </LinearLayout>
</FrameLayout>
